{{#if addNewAnswer}}
  <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text"}}
        </div>

        <div class="form-group">
          <label for="author">Author:</label>
          {{input value=author id="author"}}
        </div>
        
        <button {{action 'saveA'}}>Save</button>
        <button {{action 'cancel'}}>Cancel</button>

      </form>
    </div>
  {{else}}

    <center> <button class="btn btn-success" {{action 'answerFormShow'}}>New Answer</button> </center>
{{/if}}
