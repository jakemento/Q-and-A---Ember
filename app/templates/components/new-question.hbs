<button {{action 'questionFormShow'}}> Add a Question </button>

{{#if addNewQuestion}}
  <div>
    <br>
    <form>
      <div class="form-group">
        <label for="text">Question:</label>
        {{input value=text id="text"}}
      </div>

      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes:</label>
        {{input value=notes id="notes"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
  <button {{action 'questionFormHide'}}> Cancel </button>
{{/if}}
