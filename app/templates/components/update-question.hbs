{{#if updateQuestionForm}}
  <h2> Update {{question.author}}'s question </h2>
    <div>
      <form>
        <div class="form-group">
          <label for="text">Question:</label>
          {{input value=text id="text"}}
        </div>

        <div class="form-group">
          <label for="author">Author:</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="notes">Additional Notes:</label>
          {{input value=notes id="notes"}}
        </div>

        <button {{action 'update'}}>Save</button>
      </form>
    </div>
    <button {{action 'cancel'}}> Cancel </button>
{{else}}
    <button {{action 'updateQuestionForm'}}> Update </button>

{{/if}}
